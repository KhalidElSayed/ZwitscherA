<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
<ImageView android:layout_width="64px" 
			android:layout_height="64px" 
			android:layout_toLeftOf="@+id/TextView01" 
			android:id="@+id/ImageView01"/>
<TextView android:text="@+id/TextView01" 
			android:id="@+id/TextView01" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"/>

<TextView android:id="@+id/TweetTextView" 
		  android:layout_below="@+id/TextView01" 
		  android:layout_width="fill_parent" 
		  android:layout_height="wrap_content" 
		  android:text="@+id/TweetTextView"/>
		  
<Button android:id="@+id/ReplyButton"
		android:layout_below="@id/TweetTextView"
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"		
        android:text="Reply"/>
<Button android:id="@+id/RetweetButton"
		android:layout_below="@id/TweetTextView"
		android:layout_toRightOf="@id/ReplyButton"
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:text="Retweet"/>
<Button android:id="@+id/ClassicRetweetButton"
		android:layout_below="@id/TweetTextView"
		android:layout_toRightOf="@id/RetweetButton"
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:text="Classic Retweet"/>
<Button android:id="@+id/ThreadButton"
		android:layout_below="@id/ReplyButton"
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:text="Thread"/>
<Button android:id="@+id/DirectButton"
		android:layout_below="@id/ReplyButton"
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_toRightOf="@id/ThreadButton"
		android:text="Direct"/>
		
				  
</RelativeLayout>
