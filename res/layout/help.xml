<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
        >

    <LinearLayout
                  android:layout_height="wrap_content"
                  android:layout_width="fill_parent"
                  android:orientation="vertical"
            >
        <TextView android:id="@+id/help_common"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/help_common"
                  />

        <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                android:shrinkColumns="1"
                >
            <TableRow>
                <ImageView
                        android:src="@drawable/add_list"
                        style="@style/helpIcon"

                  android:contentDescription="@string/help_add_list" />
                <TextView
                        android:text="@string/help_add_list"
                        style="@style/helpText"
                    />
            </TableRow>
            <TableRow>
                <ImageView
                        android:src="@drawable/back_button"
                        android:background="@android:color/darker_gray"
                  android:contentDescription="@string/help_back_button" />
                <TextView
                        android:text="@string/help_back_button"
                        style="@style/helpText"
                    />
            </TableRow>
            <TableRow>
                <ImageView
                        android:src="@drawable/camera"
                        style="@style/helpIcon"
                  android:contentDescription="@string/help_camera" />
                <TextView
                        android:text="@string/help_camera"
                        style="@style/helpText"
                    />
            </TableRow>
            <TableRow>
                <ImageView
                        android:src="@drawable/direct_button"
                        style="@style/helpIcon"
                  android:contentDescription="@string/help_direct_button" />
                <TextView
                        android:text="@string/help_direct_button"
                        style="@style/helpText"
                    />
            </TableRow>
            <TableRow>
                <ImageView
                        android:src="@drawable/favorite_off"
                        style="@style/helpIcon"
                  android:contentDescription="@string/help_favorite" />
                <TextView
                        android:text="@string/help_favorite"
                        style="@style/helpText"
                    />
            </TableRow>
            <TableRow>
                <ImageView
                        android:src="@drawable/post_button"
                        style="@style/helpIcon"
                  android:contentDescription="@string/help_post_button" />
                <TextView
                        android:text="@string/help_post_button"
                        style="@style/helpText"
                    />
            </TableRow>
            <TableRow>
                <ImageView
                        android:src="@drawable/reload_button"
                        style="@style/helpIcon"
                  android:contentDescription="@string/help_reload_button" />
                <TextView
                        android:text="@string/help_reload_button"
                        style="@style/helpText"
                    />
            </TableRow>
            <TableRow>
                <ImageView
                        android:src="@drawable/reply_button"
                        style="@style/helpIcon"
                  android:contentDescription="@string/help_reply_button" />
                <TextView
                        android:text="@string/help_reply_button"
                        style="@style/helpText"
                    />
            </TableRow>
            <TableRow>
                <ImageView
                        android:src="@drawable/reply_all_button"
                        style="@style/helpIcon"
                  android:contentDescription="@string/help_reply_all_button" />
                <TextView
                        android:text="@string/help_reply_all_button"
                        style="@style/helpText"
                    />
            </TableRow>
            <TableRow>
                <ImageView
                        android:src="@drawable/rt_button_cl"
                        style="@style/helpIcon"
                  android:contentDescription="@string/help_rt_button" />
                <TextView
                        android:text="@string/help_rt_button"
                        style="@style/helpText"
                    />
            </TableRow>
            <TableRow>
                <ImageView
                        android:src="@drawable/rt_button"
                        style="@style/helpIcon"
                  android:contentDescription="@string/help_rt_button_cl" />
                <TextView
                        android:text="@string/help_rt_button_cl"
                        style="@style/helpText"
                    />
            </TableRow>
            <TableRow>
                <ImageView
                        android:src="@drawable/speaker"
                        style="@style/helpIcon"
                  android:contentDescription="@string/help_speaker" />
                <TextView
                        android:text="@string/help_speaker"
                        style="@style/helpText"
                    />
            </TableRow>
            <TableRow>
                <ImageView
                        android:src="@drawable/threads"
                        style="@style/helpIcon"
                  android:contentDescription="@string/help_threads" />
                <TextView
                        android:text="@string/help_threads"
                        style="@style/helpText"
                    />
            </TableRow>
            <TableRow>
                <ImageView
                        android:src="@drawable/to_top_button"
                        style="@style/helpIcon"
                  android:contentDescription="@string/help_to_top" />
                <TextView
                        android:text="@string/help_to_top"
                        style="@style/helpText"
                    />
            </TableRow>
            <TableRow>
                <ImageView
                        android:src="@drawable/translate"
                        style="@style/helpIcon"
                  android:contentDescription="@string/help_translate" />
                <TextView
                        android:text="@string/help_translate"
                        style="@style/helpText"
                    />
            </TableRow>
            <TableRow>
                <ImageView
                        android:src="@drawable/user_unknown"
                        style="@style/helpIcon"
                  android:contentDescription="@string/help_user_unknown" />
                <TextView
                        android:text="@string/help_user_unknown"
                        style="@style/helpText"
                    />
            </TableRow>
            <TableRow>
                <ImageView
                        android:src="@drawable/select_user"
                        style="@style/helpIcon"
                  android:contentDescription="@string/help_select_user" />
                <TextView
                        android:text="@string/help_select_user"
                        style="@style/helpText"
                    />
            </TableRow>

        </TableLayout>

        <TextView android:text="@string/help_more"
                  android:layout_height="wrap_content"
                  android:layout_width="fill_parent"
                  android:autoLink="all"
                  />

    </LinearLayout>
</ScrollView>